Bootstrap: docker
From: ubuntu:22.04 

%labels
    Author "yibo"
    Version "1.?"

%post
    # download  tools
    apt-get update && apt-get install -y \
        build-essential \
        cmake \
        git \
        libgtest-dev \
        && rm -rf /var/lib/apt/lists/*

    # build Gtest library
    cd /usr/src/gtest
    cmake .
    make
    cp *.a /usr/lib

    # build the context
    mkdir -p /opt/app/build

    # cmake the project
    cd /opt/app/build
    cmake ..
    make

%files
. /opt/app  

%environment
    export PATH=/opt/app/build:$PATH

%runscript
    exec /opt/app/build/convert_grayscale "$@"
    echo "This is a Singularity container for grayscale."
